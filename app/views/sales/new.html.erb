<div class="container">
  <span style="color:red; display:block;">Todos los campos son obligatorios.</span>
  <%= form_for @sale do |f| %>
    <div class="form-group col-md-6">
      <%= f.text_field :first_name, placeholder: "Nombre", required: "required", class: "form-control", maxlength: 255 %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name, placeholder: "Apellido", required: "required", class: "form-control", maxlength: 255 %>
    </div>
    <label style="font-size: 0.5em;">Telefono:</label>
    <div class="form-group">
      <%= f.number_field :area_code, placeholder: "Código de area", required: "required", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.number_field :number, placeholder: "Telefono", required: "required", class: "form-control" %>
    </div>
    <label style="font-size: 0.5em;">Dirección:</label>
    <div class="form-group">
      <%= f.text_field :zip_code, placeholder: "Código postal", required: "required", class: "form-control", maxlength: 30 %>
    </div>
    <div class="form-group">
      <%= f.text_field :street, placeholder: "Calle", required: "required", class: "form-control", maxlength: 255 %>
    </div>
    <div class="form-group">
      <%= f.number_field :street_number, placeholder: "Número", required: "required", class: "form-control" %>
    </div>
    <div class="form-group"><%= f.submit "Continuar compra", class:"btn btn-default pull-right" %></div>
  <% end %>
</div>
