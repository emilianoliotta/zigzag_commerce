<% if @inappropriateProducts.count > 0 %>
<h2 class="title" style="text-align:center; padding-bottom:0.3em;">Contenido marcado como indebido</h2>
<div class="container">

	<% @inappropriateProducts.each do |p| %>
		<div class="col-xs-12 col-md-12"> <!-- 3 columnas en Medium devices y 2 en Extra Small devices -->
      <div class = "panel panel-personal">
        <div class = "panel-heading">
          <span class = "panel-title text-ellipsis"><%=link_to p.title, p %></span> <div class="pull-right"><span>$<%= p.price%></span></div>
        </div>
        <div class = "panel-body panel-producto-indebido">
          <!--Descripcion--> 
          <%= simple_format(p.description.truncate(300), {}, sanitize: true) %>
						<% if p.description.length > 300 %>
							<%= link_to "(ver más)", p %>
						<% end %>
        </div>
        <div class = "panel-footer text-ellipsis">
          <div class="text-center">
          	<%= link_to "Ir al producto", p, class: "btn btn-default", style:"width:30%" %>
            <% if current_user.try(:admin?) %>
							<%= link_to "Eliminar", p, data: { confirm: "¿Estás seguro?" }, :method => :delete , class: "btn btn-danger pull-right", style:"width:50%" %>
						<% end %>
          </div>
        </div>
      </div>
    </div>
	<% end %>


<% else %>
	<h1 class="title" style="text-align:center; padding-bottom:0.3em;">No hay contenido indebido.</h1>
<% end %>

</div>