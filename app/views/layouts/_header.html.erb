      <ul class="nav navbar-nav">
        <li><%=link_to "Inicio", root_path, class:"menu-link"%></li>
        <li><%= link_to '<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Carrito'.html_safe, orders_path, class:"menu-link" %></li>
